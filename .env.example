# データベース接続文字列
# ローカル開発環境（Docker PostgreSQL）
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/diet_work?schema=public"

# 本番環境（Vercel Postgres、Supabase などのクラウドサービス）
# DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# NextAuth.js 認証設定
# AUTH_SECRET は以下のコマンドで生成できます: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here"

# Google OAuth 認証情報（Google Cloud Console から取得）
# https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# 認証URL（本番環境では実際のURLに変更）
AUTH_URL="http://localhost:3000"
